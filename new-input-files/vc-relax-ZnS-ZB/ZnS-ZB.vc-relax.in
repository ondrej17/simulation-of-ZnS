 &control
    calculation  = 'vc-relax'
    restart_mode = 'from_scratch',
    prefix       = 'ZnS-ZB',
    tstress      = .true.
    tprnfor      = .true.
    outdir       = 'outdir'
    pseudo_dir   = '~/Documents/quantum_simulations/PP_eff'
    forc_conv_thr = 1.0d-4,
 /
 &system
    ibrav       = 0
    celldm(1)   = 9.66105
    nat       	= 2, 			! number of atoms in the unit cell
    ntyp      	= 2,			! number of types of atoms in the unit cell
    ecutwfc   	= 30,			! add energy cutoff from 'encut-test'
 /
 &electrons
    diagonalization = 'david'
    mixing_mode     = 'plain'
    mixing_beta     = 0.4,
    conv_thr        = 1.0d-8,
 /
 &ions
    ion_dynamics  = 'bfgs',
 /
 &cell
    press = $PRESS$
 /
CELL_PARAMETERS {alat}
  0.500000000000000   0.500000000000000   0.000000000000000 
  0.500000000000000   0.000000000000000   0.500000000000000 
  0.000000000000000   0.500000000000000   0.500000000000000 
ATOMIC_SPECIES
 Zn 65.38000 Zn_pbe_v1.uspp.F.UPF
 S  32.06750 s_pbe_v1.4.uspp.F.UPF
ATOMIC_POSITIONS {crystal}
 Zn 0 0 0
 S  0.25 0.25 0.25
K_POINTS automatic
 5 5 5 0 0 0					! add number of k-points from 'kpoints-test'
