 &control
    calculation  = 'scf'
    prefix       = 'ZnS-RS',
    outdir       = 'outdir'
    pseudo_dir   = '~/Documents/quantum_simulations/PP_eff'
    restart_mode = 'from_scratch',
    tstress      = .true.
    tprnfor      = .true.
 /
 &system
    ibrav     	= 2,			! RS structure is fcc 
	a			= 4.83966770,	! lattice constant in Angstroms
    nat       	= 2, 			! number of atoms in the unit cell
    ntyp      	= 2,			! number of types of atoms in the unit cell
    ecutwfc   	= 30,			! kinetic energy cutoff (Ry) for wavefunctions
 /
 &electrons
    diagonalization = 'david'
    mixing_mode     = 'plain'
    mixing_beta     = 0.4,
    conv_thr        = 1.0d-6,
 /
ATOMIC_SPECIES
 Zn 65.380 Zn_pbe_v1.uspp.F.UPF
 S  32.065 s_pbe_v1.4.uspp.F.UPF
ATOMIC_POSITIONS crystal
 Zn 0 0 0
 S 0.5 0.5 0.5
K_POINTS automatic
 $KPOINTS$ $KPOINTS$ $KPOINTS$ 0 0 0
